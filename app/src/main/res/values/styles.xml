<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NewsPostThumbnail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/news_post_height</item>
    </style>

    <style name="NewsPostSportChip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/recyclerview_item_margin</item>
        <item name="android:layout_marginTop">226dp</item>
        <item name="android:layout_marginEnd">@dimen/recyclerview_item_margin</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:padding">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">?textAppearanceOverline</item>
    </style>

    <style name="NewsPostHeadline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/recyclerview_item_margin</item>
        <item name="android:layout_marginEnd">@dimen/recyclerview_item_margin</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textAppearance">?textAppearanceHeadline6</item>
    </style>

    <style name="NewsPostSubtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/recyclerview_item_margin</item>
        <item name="android:layout_marginEnd">@dimen/recyclerview_item_margin</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">@dimen/spacing_default</item>
        <item name="android:textAppearance">?textAppearanceSubtitle1</item>
    </style>
</resources>