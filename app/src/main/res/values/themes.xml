<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EurosportTechTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/on_secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/primary</item>

        <item name="textAppearanceHeadline6">@style/Theme.EurosportTechTest.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/Theme.EurosportTechTest.Subtitle</item>
        <item name="textAppearanceOverline">@style/Theme.EurosportTechTest.Overline</item>
        <item name="textAppearanceBody2">@style/Theme.EurosportTechTest.Body2</item>
    </style>

    <style name="Theme.EurosportTechTest.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EurosportTechTest.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.EurosportTechTest.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.EurosportTechTest.Body2" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.EurosportTechTest.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Theme.EurosportTechTest.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EurosportTechTest.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>